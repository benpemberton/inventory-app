extends ../layout

block content
  h1 #{title}: #{family.name}

  if instruments.length

    p #[strong Delete the following instruments before attempting to delete this family.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Instruments

      dl
      each instrument in instruments
        dt
          a(href=instrument.url) #{instrument.name}
        dd #{instrument.description}

  else
    p Do you really want to delete this Family?

    form(method='POST' action='')
      div.form-group
        input#familyid.form-control(type='hidden',name='familyid', required='true', value=family._id )

      button.btn.btn-primary(type='submit') Delete