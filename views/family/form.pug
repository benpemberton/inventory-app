extends ../layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='name') Family name:
      input#name.form-control(type='text' placeholder='Family name' name='name' required='true' value=(undefined===family ? '' : family.name) )
      label(for='description') Description:
      textarea#description.form-control(type='textarea' placeholder='Description' name='description' required='true' value=(undefined===author ? '' : family.description))
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg