doctype html
html
  head
    title Inventory | #{title}
    link(rel='stylesheet', href='/stylesheets/main.css')
  body
      nav.nav
        div.nav__title
          a(href="/") Instruments inventory
        div.nav__links
          ul
            li
              a(href='/instrument') Instruments
            li
              a(href='/product') Products
        div.add-item
          button.add-item__button + ADD NEW
          div.add-item__dropdown.add-item__dropdown--hidden
            p: a(href='/instrument/create') Instrument
            p: a(href='/product/create') Product

      main.main
        block content

      script(type='text/javascript', src='/js/addItemHandler.js')

