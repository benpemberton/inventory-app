extends ../layout

block content
  div.page-info
    h1 #{title}: #{product.name}

  if units.length

    p #[strong Delete the following units before attempting to delete this product.]

    hr

    div.list-container 
      each unit in units
        div.list-entry
          a(href=unit.url) 
            div.list-entry__inner
              div.list-entry__details
                p.list-entry__name.list-entry__name--unit #[strong Unit:] #{unit._id}
                p.list-entry__price #[strong Price:] Â£#{unit.price}
                p.list-entry__condition #[strong Condition:] #{unit.condition}
                p.list-entry__location #[strong Location:] #{unit.location}

  else
    p Do you really want to delete this Product?

    form(method='POST' action='')
      div.form-group
        input#productid.form-control(type='hidden', name='productid', required='true', value=product._id)

      button.btn.btn-primary(type='submit') Delete